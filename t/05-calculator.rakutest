#!raku

use Test;

plan 3;

use GEOS::Calculator 'c';
use GEOS::Geometry;

my $x = GEOS::Geometry.from-geojson('{"type":"Point","coordinates":[0,0]}');
my $y = GEOS::Geometry.from-geojson('{"type":"Point","coordinates":[2,0]}');

my $d = c.distance($x,$y);
is $d, 2, 'distance between two points';
like c.centroid($x).wkt, /POINT/, 'centroid of a point is a point';
is c.centroid($x).wkt, 'POINT (0 0)', 'centroid of a point is the point itself';

done-testing;
 
